<?xml version="1.0" encoding="utf-8"?>

<!--Steps for Data Binding-->
<!--Step 1: Wrap the root layout in the <layout> tag-->

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
<!--        Step 2: Define a variable with a name and type to be used-->
<!--        The variable type can be of any type-->
        <variable
            name="quote"
            type="com.example.androidarchitecturepractises.Quote" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".MainActivity">

<!--        Step 3: we use the defined variable, like `@{variable.property}`-->
        <TextView
            android:id="@+id/quoteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{quote.quote}"
            android:textSize="26dp"/>

        <TextView
            android:id="@+id/quoteAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{quote.author}"
            android:textSize="22dp"/>

    </LinearLayout>
</layout>
